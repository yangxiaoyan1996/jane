<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config.dtd"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <!--别名-->
    <typeAliases>
        <!--name:实体类的包名，类名是别名-->
        <package name="com.demo.beans"/>
    </typeAliases>
    <!--sql映射文件位置-->
    <mappers>
        <!--
            name:Dao接口的包名
            使用package要求：
                1、sql映射文件名和Dao接口名一样
                2、sql映射文件名和Dao接口要在同一目录之下
        -->
        <package name="com.demo.dao"/>
    </mappers>
</configuration>